cat<<'EOT'>> dnadiff.sh
#!/bin/bash
#SBATCH -n 10
#SBATCH --mem-per-cpu=100G
#SBATCH -t 48:00:00
#SBATCH -o 5_scaffold

directory=`cat directory.txt`

longstitch run draft=${directory}/assembly/dbg.cns reads=${directory}/QC/nanofilt.fa G=3e9 > ${directory}/stitch/longstitch

cat<<'EOT'>> gzip.sh
#!/bin/bash
#SBATCH -n 10
#SBATCH --mem-per-cpu=100G
#SBATCH -t 48:00:00

gzip nanofilt.fa

EOT
