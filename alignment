cat<<'EOT'>> minimap_align_paf.sh
#!/bin/bash
#SBATCH -n 4
#SBATCH --mem-per-cpu=9G
#SBATCH -t 72:00:00

file=$1
output=$2

/scratch/groups/sgdp_nanopore/software/minimap2-2.24_x64-linux/minimap2 \
-x map-ont \
-x ava-ont \
-x splice \
/scratch/groups/sgdp_nanopore/Resources/human_g1k_v37.fasta.gz \
${file} \
| gzip -1 > ${output}
EOT
