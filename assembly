cat<<'EOT'>> miniasm_align_paf.sh
#!/bin/bash
#SBATCH -n 4
#SBATCH --mem-per-cpu=9G
#SBATCH -t 72:00:00

file=$1
input=$2
output=$3

/scratch/groups/sgdp_nanopore/software/miniasm/miniasm -2S6 \
-f ${file} \
${input} > ${output}

awk '/^S/{print ">"$2"\n"$3}' ${output} > miniasm.fasta

assembly-stats ./miniasm.fasta > report.txt

EOT
