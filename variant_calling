cat<<'EOT'>> convert_bcf.sh
#!/bin/bash
#SBATCH -n 4
#SBATCH --mem-per-cpu=16G

module load apps/samtools

samtools mpileup -I -u -f /scratch/groups/sgdp_nanopore/20_01_22/analysis/T2T_ref/GCA_009914755.4_CHM13_T2T_v2.0_genomic.fna \
mapped.sorted.bam > pileup.bcf

EOT

cat<<'EOT'>> samtools.sh
#!/bin/bash
#SBATCH -n 4
#SBATCH --mem-per-cpu=9G

module load apps/samtools

######output SAM file to BAM file
samtools view -S -b aln.sam > mapped.bam

echo 'finished making bam'

#####sort the BAM file
samtools sort mapped.bam -o mapped.sorted.bam

echo 'finished sorting bam'

#####index the BAM file
samtools index mapped.sorted.bam

echo 'finished indexing bam'

#####see what the BAM file is like
samtools flagstat mapped.sorted.bam

echo 'view bam file'

EOT


cat<<'EOT'>> convert_bcf.sh
#!/bin/bash
#SBATCH -n 4
#SBATCH --mem-per-cpu=9G

module load apps/samtools

bcftools mpileup -O b -o mapped.bcf \
-f /scratch/groups/sgdp_nanopore/20_01_22/analysis/T2T_ref/GCA_009914755.4_CHM13_T2T_v2.0_genomic.fna \
mapped.sorted.bam

EOT
